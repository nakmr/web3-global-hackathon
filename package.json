{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"{apps,packages}/**/*.{ts,tsx,md}\"",
    "format-sol": "prettier --plugin=prettier-plugin-solidity --write \"contracts/{script,src,test}/**/*.{md,sol}\"",
    "format-json": "prettier --write **/*.json"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "tsconfig": "*",
    "turbo": "latest"
  },
  "name": "web3-global-hackathon",
  "packageManager": "pnpm@8.10.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
